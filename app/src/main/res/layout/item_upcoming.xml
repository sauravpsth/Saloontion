<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/rounded_button">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_contact1"
        android:layout_width="90dp"
        android:layout_height="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/images2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name_contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/margin"
        android:text="Saloon Name"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="129dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_contact1"/>


    <Button
        android:id="@+id/bt11"
        android:layout_width="98dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="Cancel"
        android:textSize="10sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Canceled"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="#F41505"
        app:layout_constraintEnd_toEndOf="@id/bt11"
        app:layout_constraintStart_toStartOf="@id/bt11"
        app:layout_constraintTop_toTopOf="@id/bt11"
        app:layout_constraintBottom_toBottomOf="@id/bt11"/>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="15dp"
        android:text="Amount"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/img_contact1"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/descp1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.73"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:text="Type:hair cut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_contact1"
        app:layout_constraintTop_toBottomOf="@id/name_contact1"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:alpha="0.73"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/descp1"
        app:layout_constraintStart_toEndOf="@id/img_contact1" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:alpha="0.73"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/descp1"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>