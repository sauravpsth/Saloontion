<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
       android:textStyle="bold"
        android:id="@+id/tvforget"/>

    <TextView

        android:id="@+id/tvforgetinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your Email below and we will send a message to reset your password."
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvforget" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvforgetinfo"
        android:hint="Email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20sp"
        android:id="@+id/etEmail1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Proceed"
        android:background="@drawable/rounded_button"
        android:id="@+id/btforgetproceed"
        app:layout_constraintTop_toBottomOf="@id/etEmail1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>